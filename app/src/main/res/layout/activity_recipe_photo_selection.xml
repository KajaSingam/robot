<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/RecipePhotoSelectionLayout">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_05"
        android:id="@+id/chineseFoodIcon"
        android:layout_alignTop="@+id/mexicanFoodIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="SetTeamIcon" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_03"
        android:id="@+id/westernFoodIcon"
        android:layout_alignBottom="@+id/nextButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:onClick="SetTeamIcon" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_06"
        android:id="@+id/breakfastFoodIcon"
        android:layout_alignTop="@+id/westernFoodIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="SetTeamIcon" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_04"
        android:id="@+id/mexicanFoodIcon"
        android:layout_above="@+id/nextButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="113dp"
        android:onClick="SetTeamIcon" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_02"
        android:id="@+id/dessertIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:onClick="SetTeamIcon" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_logo_01"
        android:id="@+id/italianFoodIcon"
        android:layout_alignTop="@+id/dessertIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="SetTeamIcon" />

    <TextView
        android:text="@string/selecting_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignTop="@+id/italianFoodIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:targetApi="jelly_bean"
        tools:ignore="RelativeOverlap" />

    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:layout_marginBottom="11dp"
        tools:ignore="RelativeOverlap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
